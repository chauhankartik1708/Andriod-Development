<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/LightGoldenrodYellow"

    tools:context="com.example.kartiksinghchauhan.dictionary.StartMenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dictionary"
        android:textSize="39sp"
        android:textStyle="italic"
        />
    <Button
        android:layout_marginTop="20sp"
        android:text="Play Game !"
        android:onClick="playTheGameClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Add a new word"
        android:onClick="addANewWordClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
